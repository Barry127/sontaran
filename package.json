{
  "name": "sontaran",
  "version": "1.0.0",
  "description": "Javascript number, string, boolean, object validator",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "clear": "rimraf coverage dist",
    "prebuild": "yarn clear",
    "build": "rollup --config",
    "prepublish": "yarn test:ci && yarn build",
    "postpublish": "yarn clear",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Barry127/sontaran.git"
  },
  "keywords": [
    "validator",
    "validate",
    "string",
    "number",
    "boolean",
    "object"
  ],
  "author": "Barry de Kleijn <kleijn.barry@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Barry127/sontaran/issues"
  },
  "homepage": "https://barry127.github.io/sontaran",
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.10",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0"
  },
  "dependencies": {
    "jest": "^26.4.2",
    "rollup": "^2.26.8",
    "rollup-plugin-typescript2": "^0.27.2",
    "typescript": "^4.0.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/_data"
    ],
    "transform": {
      ".(ts|tsx|json)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "modulePaths": [
      "src"
    ]
  }
}
